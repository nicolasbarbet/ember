
<div class="container">
    <div class="panel panel-primary">

        <div class="panel-heading"><h1>Selectionnez vos produits :</h1></div>

        <MultiSelect @elements = {{model.dispoItems}} @selectedIds = {{model.dispoItemsIds_}}/>

        <button {{action "addToIncluded" model}}> ▶| </button>
        <button {{action "addAllToIncluded" model}}> ▶▶|  </button>
        <button {{action "removeFromIncluded" model}}> |◀ </button>
        <button {{action "RemoveAllFromIncluded" model}}> |◀◀ </button>

        <MultiSelect @elements = {{model.includedItems}} @selectedIds = {{model.includedItemsIds_}}/>
      <p>{{model.includedItems.length}} produits inclus</p>
    </div>

    <button {{action "toggleStep" model}}>
        {{#if model.step}}
            Étape suivante
        {{else}}
            Étape précédente
        {{/if}}
    </button>
</div>

{{outlet}}